<?xml version="1.0" encoding="UTF-8"?>
<sequence name="ussdMOStopSubscriptionSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2"/>
    <header expression="get-property('ENDPOINT')" name="To" scope="default"/>

    <call-template target="com.wso2telco.dep.common.loggingExtension.Template">
        <with-param name="direction" value="REQUESTOUT"/>
    </call-template>
    <sequence key="com.wso2telco.dep.common.change.header.name"/>
    <call>
        <endpoint key="defaultUSSDEndpoint"/>
    </call>

    <call-template target="com.wso2telco.dep.common.loggingExtension.Template">
        <with-param name="direction" value="RESPONSEIN"/>
    </call-template>

    <switch source="$axis2:HTTP_SC">
        <case regex="(200|201|204)">
            <dbreport>
                <connection>
                    <pool>
                        <dsName>jdbc/WSO2TELCO_DEP_DB</dsName>
                    </pool>
                </connection>
                <statement>
                    <sql><![CDATA[delete from mo_ussd_subscription where ussd_request_did=?;]]></sql>
                    <parameter expression="get-property('subscriptionId')" type="VARCHAR" />
                </statement>
            </dbreport>
            <dbreport>
                <connection>
                    <pool>
                        <dsName>jdbc/WSO2TELCO_DEP_DB</dsName>
                    </pool>
                </connection>
                <statement>
                    <sql><![CDATA[delete from ussd_request_entry where ussd_request_did=?;]]></sql>
                    <parameter expression="get-property('subscriptionId')" type="VARCHAR"/>
                </statement>
            </dbreport>
        </case>
        <default />
    </switch>

    <call-template target="com.wso2telco.dep.common.loggingExtension.Template">
        <with-param name="direction" value="RESPONSEOUT"/>
    </call-template>

    <respond/>
</sequence>
