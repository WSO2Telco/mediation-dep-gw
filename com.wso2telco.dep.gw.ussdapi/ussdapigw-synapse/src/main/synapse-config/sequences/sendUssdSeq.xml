<?xml version="1.0" encoding="UTF-8"?>
<sequence name="sendUssdSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2"/>
    <header expression="get-property('ENDPOINT')" name="To" scope="default"/>
    <property expression="json-eval($.outboundUSSDMessageRequest.outboundUSSDMessage)" name="outboundUSSDMessage" scope="default" type="STRING"/>
    <filter source="boolean(get-property('subsEndPoint'))" regex="true">
        <then>
           <sequence key="modifySendUSSDRequestPayloadSeq"/>
        </then>
        <else/>
    </filter>
    <filter source="boolean(get-property('originalNotifyURL'))" regex="false">
        <then>
            <class name="com.wso2telco.dep.common.mediation.UtilMediator">
                <property name="propertyValue" value="replaceNewLineCharacters"/>
                <property name="propertyName" value="outboundUSSDMessage"/>
                <property name="propertyPath" value="payload.outboundUSSDMessageRequest.outboundUSSDMessage"/>
            </class>
        </then>
        <else/>
    </filter>

    <call-template target="com.wso2telco.dep.common.loggingExtension.Template">
      <with-param name="direction" value="REQUESTOUT"/>
    </call-template>
    <sequence key="com.wso2telco.dep.common.change.header.name"/>
    <call>
        <endpoint key="sendUssdSeqEndpoint"/>
    </call>

    <call-template target="com.wso2telco.dep.common.loggingExtension.Template">
 		<with-param name="direction" value="RESPONSEIN"/>
	</call-template>

    <filter source="boolean(get-property('originalNotifyURL'))" regex="true">
        <then>
           <sequence key="modifySendUSSDResponsePayloadSeq"/>
        </then>
        <else/>
    </filter>

    <call-template target="com.wso2telco.dep.common.loggingExtension.Template">
 		<with-param name="direction" value="RESPONSEOUT"/>
	</call-template>

    <respond/>
</sequence>
